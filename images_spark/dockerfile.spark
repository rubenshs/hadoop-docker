FROM rubenss/hadoop:hadoop

USER root
RUN yum update -y -q
RUN yum upgrade -y -q
RUN yum install -y -q scala git
RUN yum install -y -q python3 python3-dev python3-pip

WORKDIR /opt

#RUN wget -q http://www-us.apache.org/dist/spark/spark-2.3.0/spark-2.3.0-bin-hadoop2.7.tgz
