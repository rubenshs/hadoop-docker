#RUN mv spark-2.3.0-bin-hadoop2.7 spark
#RUN chown -R hadoop:hadoop spark

USER hadoop

WORKDIR /home/hadoop
COPY images/files/.bashrc /home/hadoop/.bashrc
RUN source /home/hadoop/.bashrc

RUN java -version; javac -version; scala -version; git --version

EXPOSE 8080
